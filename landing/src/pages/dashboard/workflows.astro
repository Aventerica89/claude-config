---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../components/dashboard/DashboardLayout';
---

<BaseLayout title="Workflows - Claude Codex Dashboard">
  <DashboardLayout currentPath="/dashboard/workflows" client:load>
    <div class="space-y-6">
      <div>
        <h1 class="text-2xl font-bold">Visual Workflows</h1>
        <p class="text-muted-foreground">
          Build n8n-style workflows combining commands, agents, and skills
        </p>
      </div>

      <div class="bg-card border border-border rounded-xl p-12 text-center">
        <div class="w-16 h-16 rounded-2xl bg-amber-500/10 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-amber-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Coming in Phase 4</h3>
        <p class="text-sm text-muted-foreground max-w-md mx-auto">
          The visual workflow builder will use react-flow to let you drag-and-drop
          commands, agents, and skills into connected workflows. Save and share
          them across projects.
        </p>
      </div>
    </div>
  </DashboardLayout>
</BaseLayout>
